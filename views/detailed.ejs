<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Detailed Weather for <%= city %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center">Detailed Weather for <%= city %> on <%= selectedDayWeather.date %></h1>

        <div class="card mt-4 shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Day Summary</h5>
                <div class="d-flex align-items-center">
                    <img src="<%= selectedDayWeather.day.condition.icon %>" alt="weather icon" class="weather-icon me-3" />
                    <div>
                        <p>Max Temp: <strong><%= selectedDayWeather.day.maxtemp_c %> °C</strong></p>
                        <p>Min Temp: <strong><%= selectedDayWeather.day.mintemp_c %> °C</strong></p>
                        <p>Condition: <%= selectedDayWeather.day.condition.text %></p>
                        <!-- Add average pressure to Day Summary -->
                        <p>Average Pressure: <strong><%= avgPressure.toFixed(2) %> hPa</strong></p>
                    </div>
                </div>
                <hr>

                <h5 class="card-title">Hourly Forecast with Pressure</h5>
                <div class="accordion" id="hourlyForecastAccordion">
                    <% hourlyWeather.forEach((hour, index) => { %>
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="heading<%= index %>">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse<%= index %>" aria-expanded="false" aria-controls="collapse<%= index %>">
                                <%= hour.time %> - <%= hour.temp_c %> °C
                            </button>
                        </h2>
                        <div id="collapse<%= index %>" class="accordion-collapse collapse" aria-labelledby="heading<%= index %>" data-bs-parent="#hourlyForecastAccordion">
                            <div class="accordion-body">
                                <img src="<%= hour.condition.icon %>" alt="hourly weather icon" class="mb-2" />
                                <p>Condition: <%= hour.condition.text %></p>
                                <p>Pressure: <strong><%= pressureData[index] ? pressureData[index].pressure : 'N/A' %> hPa</strong></p>
                                <p>Wind: <%= hour.wind_kph %> kph</p>
                                <p>Humidity: <%= hour.humidity %> %</p>
                            </div>
                        </div>
                    </div>
                    <% }) %>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
